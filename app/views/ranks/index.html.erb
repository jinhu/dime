<h1>Listing ranks</h1>

<table>
  <tr>
    <th>Game</th>
    <th>User</th>
    <th>Score</th>
    <th>Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ranks.each do |rank| %>
  <tr>
    <td><%= rank.game_id %></td>
    <td><%= rank.user_id %></td>
    <td><%= rank.score %></td>
    <td><%= rank.time %></td>
    <td><%= link_to 'Show', rank %></td>
    <td><%= link_to 'Edit', edit_rank_path(rank) %></td>
    <td><%= link_to 'Destroy', rank, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

